{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "Bare bones tools that should be used in every Node.js project.",
  "main": "index.js",
  "repository": "git@github.com:patrickocoffeyo/nodejs.git",
  "homepage": "https://github.com/patrickocoffeyo/nodejs/blob/master/README.md",
  "author": "Patrick Coffey <patrickcoffey48@gmail.com>",
  "license": "GPL-3.0",
  "contributors": [
    {
      "name": "Patrick Coffey",
      "email": "patrickcoffey48@gmail.com"
    }
  ],
  "engines": {
    "node": ">=8.4.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .jsx,.js src",
    "test": "yarn build && nyc ava --verbose",
    "prettier": "prettier --single-quote --write \"/src/**/*.{js,jsx}\"",
    "build": "babel src/ -d lib/",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "flow": "flow",
    "commitmsg": "validate-commit-msg",
    "precommit": "lint-staged && yarn lint && yarn flow"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.53.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "nyc": "^11.1.0",
    "prettier": "^1.5.3",
    "semantic-release": "^7.0.2",
    "semantic-release-conventional-commits": "^1.1.0",
    "validate-commit-msg": "^2.14.0"
  }
}
